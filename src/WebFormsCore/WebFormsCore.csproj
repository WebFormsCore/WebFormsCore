<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\sdk\WebFormsCore.SDK.Core\Sdk.props" />

    <PropertyGroup>
        <TargetFrameworks>$(DotNetVersions)</TargetFrameworks>
		<LangVersion>preview</LangVersion>
        <Nullable>enable</Nullable>
        <RootNamespace>WebFormsCore</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<PolySharpIncludeRuntimeSupportedAttributes>true</PolySharpIncludeRuntimeSupportedAttributes>
		<IsTrimmable Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net6.0'))">true</IsTrimmable>
        <WebFormsCoreUseNuget>false</WebFormsCoreUseNuget>
    </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="JetBrains.Annotations" Version="2024.3.0" />
		<PackageReference Include="Microsoft.IO.RecyclableMemoryStream" Version="3.0.1" />
		<PackageReference Include="System.Linq.Async" Version="7.0.0" />
		<PackageReference Include="PolySharp" Version="1.15.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
		</PackageReference>
	</ItemGroup>

    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\WebFormsCore.SourceGenerator\WebFormsCore.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="WebFormsCore.Tests" />
		<InternalsVisibleTo Include="WebFormsCore.SourceGenerator.Tests" />
	</ItemGroup>

    <Import Project="..\..\sdk\WebFormsCore.SDK.Core\Sdk.targets" />

</Project>
